@model Wedding_Playlist.Models.PlaylistDetailsViewModel
@{
    ViewData["Title"] = "Playlist Details";
}

<div class="custom-card">
    <div class="card-header">
        <h2>@Model.Playlist.Name</h2>
        <p>Created by: @Model.Playlist.CreatedBy</p>
    </div>

    <h2 class="section-title">Songs in Playlist (@Model.Songs.Count)</h2>

    @if (Model.Songs.Any())
    {
        <div class="table-container">
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Artist</th>
                        <th>Genre</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var song in Model.Songs)
                    {
                        <tr>
                            <td>@song.Title</td>
                            <td>@song.Artist</td>
                            <td>@song.Genre</td>
                            <td>@song.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p>This playlist doesn't have any songs yet.</p>
        </div>
    }

    <div class="action-buttons">
        <a asp-action="Edit" asp-route-id="@Model.Playlist.PlaylistID" class="btn btn-primary">Edit Playlist</a>
        <a asp-action="ListPlaylist" class="btn btn-secondary">Back to List</a>
    </div>
</div>