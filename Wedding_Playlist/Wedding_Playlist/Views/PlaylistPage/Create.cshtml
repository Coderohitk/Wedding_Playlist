@model Wedding_Playlist.Models.PlaylistDTO
@{
    ViewData["Title"] = "Create Playlist";
}

<div class="form-container">
    <div class="custom-card">
        <h2>Create Playlist</h2>
        <form asp-action="CreatePlaylist" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="CreatedBy"></label>
                <input asp-for="CreatedBy" class="form-control" required />
            </div>
            <div class="btn-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="ListPlaylist" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
