@model Wedding_Playlist.Models.PlaylistDTO
@{
    ViewData["Title"] = "Confirm Delete";
}

<style>
    body {
        background: #EFE5DC;
    }

    .custom-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 20px;
    }

    .custom-card {
        background: linear-gradient(153deg, #FBFEFB 31.55%, #EFE5DC 98.87%);
        border-radius: 31px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        padding: 2rem;
    }

    .btn-group {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.3s;
        text-decoration: none;
        font-weight: bold;
    }

    .btn-danger {
        background: #B08B6F;
        color: white;
    }

    .btn-secondary {
        background: #d9b497;
        color: white;
    }

    .btn:hover {
        opacity: 0.9;
    }

    h1,
    h3,
    h4 {
        color: #000;
        margin-bottom: 1rem;
    }

    h1 {
        font-size: 1.8rem;
    }

    h3 {
        font-size: 1.2rem;
    }

    h4 {
        font-size: 1.1rem;
    }
</style>

<div class="custom-container">
    <div class="custom-card">
        <div class="delete-header">
            <h2>Delete Playlist</h2>
            <h3>Are you sure you want to delete this playlist?</h3>
        </div>

        <div class="delete-details">
            <h4>@Model.Name</h4>
            <p>Created By: @Model.CreatedBy</p>
        </div>

        <form asp-action="DeletePlaylist" asp-route-id="@Model.PlaylistID" method="post">

            <input type="hidden" asp-for="PlaylistID" />
            <div class="btn-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="ListPlaylist" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
