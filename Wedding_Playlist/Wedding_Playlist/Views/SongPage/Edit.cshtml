@model Wedding_Playlist.Models.SongDTO
@{
    ViewData["Title"] = "Edit Song";
}

<div class="form-container">
    <h2>Edit Song</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="SongId" />

        <div class="form-group">
            <label asp-for="Title" class="control-label">Title</label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Artist" class="control-label">Artist</label>
            <input asp-for="Artist" class="form-control" required />
            <span asp-validation-for="Artist" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Genre" class="control-label">Genre</label>
            <input asp-for="Genre" class="form-control" required />
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label">Description</label>
            <textarea asp-for="Description" class="form-control" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
