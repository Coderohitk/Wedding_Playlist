@model Wedding_Playlist.Models.GuestDTO
@{
    ViewData["Title"] = "Create Guest";
    var eventList = ViewData["EventsList"] as List<Wedding_Playlist.Models.Event>;
}

<style>
    /* Reuse existing styling */
    body {
        background: #EFE5DC;

    }

    .form-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background: linear-gradient(153deg, #FBFEFB 31.55%, #EFE5DC 98.87%);
        border-radius: 31px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: #000;
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .control-label {
        display: block;
        margin-bottom: 0.5rem;
        color: #000;
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid rgba(176, 139, 111, 0.5);
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.8);
        transition: all 0.3s ease;
    }

    .form-control:focus {
        outline: none;
        box-shadow: 0 0 0 2px rgba(176, 139, 111, 0.3);
        background: white;
    }

    .form-check {
        margin-bottom: 1rem;
    }

    .form-check-label {
        margin-left: 0.5rem;
        color: #000;
    }

    .form-check-input {
        margin-top: 0.3rem;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: 0.3s;
        text-decoration: none;
        font-weight: bold;
    }

    .btn-primary {
        background: #d9b497;
        color: white;
    }

    .btn-secondary {
        background: #B08B6F;
        color: white;
    }

    .btn:hover {
        opacity: 0.9;
    }

    .text-danger {
        color: #dc3545;
        font-size: 0.9rem;
        margin-top: 0.25rem;
    }

    .event-group {
        margin-bottom: 1.5rem;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.8);
        border-radius: 8px;
        border: 1px solid rgba(176, 139, 111, 0.3);
    }

    .event-group label {
        font-weight: bold;
        color: #000;
    }

    .event-group input[type="number"] {
        width: 80px;
        padding: 8px;
        border: 1px solid rgba(176, 139, 111, 0.5);
        border-radius: 8px;
        margin-left: 0.5rem;
    }

    .input-group {
        display: none;
        /* Hide input groups by default */
    }
</style>

<div class="form-container">
    <h2>Create Guest</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="RSVP_Status" class="control-label"></label>
            <input asp-for="RSVP_Status" class="form-control" required />
            <span asp-validation-for="RSVP_Status" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Side" class="control-label"></label>
            <input asp-for="Side" class="form-control" required />
            <span asp-validation-for="Side" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Select Events</label>
            <div class="event-selection"
                style="max-height: 200px; overflow-y: auto; padding: 10px; border: 1px solid #ced4da; border-radius: 8px;">
                @if (eventList != null && eventList.Any())
                {
                    @foreach (var evt in eventList)
                    {
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="event_@evt.EventId" name="selectedEvents"
                                value="@evt.EventId" />
                            <label class="form-check-label" for="event_@evt.EventId">
                                @evt.Name - @evt.Date.ToString("MMM dd, yyyy")
                            </label>
                        </div>
                    }
                }
                else
                {
                    <p>No events available</p>
                }
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create Guest</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}