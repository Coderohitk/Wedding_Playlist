@{
    ViewData["Title"] = "Test Song Requests";
    var requestCount = ViewData["RequestCount"];
    var requestDetails = ViewData["RequestDetails"] as List<dynamic>;
}

<style>
    body {
        background: #EFE5DC;
    }

    .page-title {
        color: #000;
        font-size: 1.8rem;
        margin-bottom: 2rem;
        text-align: center;
    }

    .table-container {
        width: 100%;
        max-width: 1000px;
        margin: auto;
        padding: 20px 0;
    }

    .styled-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 31px;
        overflow: hidden;
        background: linear-gradient(153deg, #FBFEFB 31.55%, #EFE5DC 98.87%);
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
    }

    .styled-table thead th {
        background: #B08B6F;
        color: white;
        padding: 12px 15px;
        text-align: left;
        font-weight: bold;
    }

    .styled-table tbody td {
        padding: 12px 15px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.5);
    }
</style>

<div class="container">
    <h1 class="page-title">Test Song Requests</h1>
    
    <div class="row">
        <div class="col-md-12">
            <h3>Total Requests: @requestCount</h3>
            
            @if (requestDetails != null && requestDetails.Any())
            {
                <div class="table-container">
                    <table class="styled-table">
                        <thead>
                            <tr>
                                <th>Request ID</th>
                                <th>Guest ID</th>
                                <th>Song ID</th>
                                <th>Status</th>
                                <th>Song Title</th>
                                <th>Song Artist</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in requestDetails)
                            {
                                <tr>
                                    <td>@item.RequestID</td>
                                    <td>@item.GuestID</td>
                                    <td>@item.SongID</td>
                                    <td>@item.Status</td>
                                    <td>@item.SongTitle</td>
                                    <td>@item.SongArtist</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <p>No song requests found in the database.</p>
                </div>
            }
            
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</div> 